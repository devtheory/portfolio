<%= render "layouts/navbar" %>
<br >

<div class="col-md-6">
  <h2>Active Projects</h2>
  <div class="panel panel-info">
    <div class="panel-body">
      <ul class="list-group">
        <% if @projects.count > 0 %>
          <% @projects.each do |project| %>
            <li class="list-group-item"><%= link_to project.name, project_path(project) %></li>
          <% end %>
        <% else %>
          <li class="list-group-item">You have no projects.</li>
        <% end %>
      </ul>
    </div>
    <div class="panel-footer">Click on a project to learn more about it.</div>
  </div>
</div>

<div class="col-md-6">
  <h2>Requests</h2>
  <div class="panel panel-info">
    <div class="panel-body">
      <ul class="list-group">
        <% if @requests.count > 0 %>
          <% @requests.each do |request| %>
            <li class="list-group-item"><%= link_to request.purpose, request_path(request) %></li>
          <% end %>
        <% else %>
          <li>You have no requests.</li>
        <% end %>
      </ul>
    </div>
    <div class="panel-footer">Click on a request to learn more about it.</div>
  </div>
</div>