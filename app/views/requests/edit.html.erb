<%= render "layouts/navbar" %>
<br >

<div class="col-md-6">
  <%= form_for(@request) do |f| %>
  <div class="form-group">
      <%= f.label :purpose %>
      <%= f.text_field :purpose, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :timeline %>
      <%= f.text_field :timeline, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :budget %>
      <%= f.text_field :budget, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :users_supported %>
      <%= f.text_field :users_supported, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :need_hosting %>
      <%= f.text_field :need_hosting, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :point_of_contact %>
      <%= f.text_field :poc, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :contact_number %>
      <%= f.text_field :phone, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :remarks %>
      <%= f.text_area :remarks, class: 'form-control' %>
    </div>

    <%= f.submit "Update", class: 'btn btn-info' %>
  <% end %>
</div>